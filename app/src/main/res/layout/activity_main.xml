<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ashraf.inputcontrol.MainActivity"
    android:orientation="vertical">

    <CheckBox android:id="@+id/checkbox_ashraf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ashraf"
        android:onClick="onCheckboxClicked"/>
    <CheckBox android:id="@+id/checkbox_alve"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alve"
        android:onClick="onCheckboxClicked"/>
    <CheckBox android:id="@+id/checkbox_anam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Anam"
        android:onClick="onCheckboxClicked"/>
    <CheckBox android:id="@+id/checkbox_Md"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Md"
        android:onClick="onCheckboxClicked"/>

</LinearLayout>
